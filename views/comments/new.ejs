<% include ../partials/head %>
<% include ../partials/nav %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center; ">Add A New Comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="comment[text]" placeholder="Comment">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="comment[author]" placeholder="Author">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
    <p style="text-align: center;"><a href="/campgrounds">Back to Campgrounds</a></p>
  </div>
</div>


<% include ../partials/head %>
<% include ../partials/nav %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center; ">Edit <%= campground.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>
    <p style="text-align: center;"><a href="/campgrounds">Back to Campgrounds</a></p>
  </div>
</div>

<% include ../partials/footer %>

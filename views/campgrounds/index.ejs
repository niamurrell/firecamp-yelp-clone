<% include ../partials/head %>
<% include ../partials/nav %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1><img src="/img/fire256.png" alt="FireCamp" id="jumbo-icon"> FireCamp</h1>
      <h3>Your next favorite campground awaits.</h3>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new campground</a>
      </p>
    </div>
  </header>
  <div class="row">
    <div class="col-lg-12">
      <h3>Our Best Campgrounds</h3>
    </div>
  </div>
  <div class="row" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground) { %>
      <div class="col-md-4 col-sm-6">
        <div class="thumbnail">
          <a href="/campgrounds/<%= campground._id %>"><img src="<%= campground.image %>" alt="<%= campground.name %>" class="img-responsive"></a>
          <div class="caption text-center">
            <h4><%= campground.name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }); %>
  </div>




</div> <!-- close container -->


<% include ../partials/footer %>
